<!-- views/blog.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <div class="container">
          <h1>Welcome to My Personal Website</h1>
          <nav>
            <ul>
              <li><a href="#about">About Me</a></li>
              <li><a href="#projects">Projects</a></li>
              <li><a href="#contact">Contact</a></li>
              <li><a href="/blog">Contact</a></li>
              <li><a href="html/login.html">Login</a></li> <!-- Login Link -->
            </ul>
          </nav>
        </div>
      </header>
    <header>
        <h1>Welcome to <%= title %></h1>
        <a href="/create-post">Create a New Post</a>
      </header>
      <main>
        <% if (posts.length === 0) { %>
          <p>No posts available yet. Check back later!</p>
        <% } else { %>
          <ul>
            <% posts.forEach(post => { %>
              <li>
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
              </li>
            <% }); %>
          </ul>
        <% } %>
      </main>
      <footer>
        <div class="container">
          <p>&copy; 2025 IamRiaz. All rights reserved.</p>
        </div>
      </footer>
</body>
</html>